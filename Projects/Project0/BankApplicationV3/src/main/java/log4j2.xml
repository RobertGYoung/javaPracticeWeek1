<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="ERROR">
 
     <Appenders>
    <File name="MyLogFile" fileName="log/logfile.txt" createOnDemand="true">
      <PatternLayout>
        <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
      </PatternLayout>
    </File>

</Appenders>
 
  <Loggers>
    <Root level="trace">
      <AppenderRef ref="MyLogFile"/>
    </Root>
  </Loggers>
</Configuration>